generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model details {
    id Int @id @default(autoincrement())
    productId Int
    quantity Int
    id_order Int?
    order order? @relation(fields: [id_order], references: [id], onDelete: NoAction, onUpdate: NoAction)

}

model order {
    id Int @id @default(autoincrement())
    date_order DateTime @db.Date
    details details[]
}
